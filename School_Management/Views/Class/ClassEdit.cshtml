@model School_Management.Models.Class

<h2>Edit Class</h2>

<form asp-action="ClassEdit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ClassName" class="control-label"></label>
        <input asp-for="ClassName" class="form-control" />
        <span asp-validation-for="ClassName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Section" class="control-label"></label>
        <input asp-for="Section" class="form-control" />
        <span asp-validation-for="Section" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeacherId" class="control-label">Teacher</label>
        <select asp-for="TeacherId" asp-items="ViewBag.TeacherList" class="form-control"></select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
