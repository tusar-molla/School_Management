@model IEnumerable<School_Management.Models.Class>

<h2>Class List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Class Name</th>
            <th>Section</th>
            <th>Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClassName</td>
                <td>@item.Section</td>
                <td>@item.Teacher?.FirstName</td>
                <td>
                    <a asp-action="ClassEdit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="ClassDetails" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="ClassDelete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
