@model IEnumerable<Student>

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header">
            <h2 class="mb-0 text-center">Students List</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle border">
                    <thead class="table-dark">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Contact Number</th>
                            <th>Date Of Birth</th>
                            <th>Gender</th>
                            <th>Address</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.FirstName.ToUpper()</td>
                                <td>@student.LastName.ToUpper()</td>
                                <td>@student.ContactNumber</td>
                                <td>@student.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                <td>@student.Gender.ToUpper()</td>
                                <td>@student.Address</td>
                                <td class="text-center">
                                    <a asp-action="StudentEdit" asp-route-id="@student.Id" class="btn btn-sm btn-outline-warning me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-sm btn-outline-info me-2 text-dark">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="StdDelete" asp-route-id="@student.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
