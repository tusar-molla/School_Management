@model Subject

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Edit Subject</h4>
        </div>
        <div class="card-body">
            <form asp-action="SubjectEdit">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SubjectName" class="form-label fw-semibold"></label>
                        <input asp-for="SubjectName" class="form-control" placeholder="Enter Subject name" />
                        <span asp-validation-for="SubjectName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <input asp-for="Description" class="form-control" placeholder="Enter Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success px-4 mt-3">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
