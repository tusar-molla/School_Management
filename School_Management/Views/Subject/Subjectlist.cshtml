@model IEnumerable<Subject>

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header">
            <h2 class="mb-0 text-center">Subject List</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle border">
                    <thead class="table-dark">
                        <tr>
                            <th>Subject Name</th>
                            <th>Description</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subject in Model)
                        {
                            <tr>
                                <td>@subject.SubjectName.ToUpper()</td>
                                <td>@subject.Description.ToUpper()</td>
                                <td class="text-center">
                                    <a asp-action="SubjectEdit" asp-route-id="@subject.Id" class="btn btn-sm btn-outline-warning me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@subject.Id" class="btn btn-sm btn-outline-info me-2 text-dark">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="SbjctDelete" asp-route-id="@subject.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
