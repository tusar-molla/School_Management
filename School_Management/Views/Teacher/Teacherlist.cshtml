@model IEnumerable<Teacher>

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header">
            <h2 class="mb-0 text-center">Teacher List</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle border">
                    <thead class="table-dark">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Qualification</th>
                            <th>SubjectSpecialization</th>
                            <th>ContactNumber</th>
                            <th>Email</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model)
                        {
                            <tr>
                                <td>@teacher.FirstName.ToUpper()</td>
                                <td>@teacher.LastName.ToUpper()</td>
                                <td>@teacher.Qualification</td>
                                <td>@teacher.SubjectSpecialization</td>
                                <td>@teacher.ContactNumber.ToUpper()</td>
                                <td>@teacher.Email</td>
                                <td class="text-center">
                                    <a asp-action="TeacherEdit" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-warning me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-info me-2 text-dark">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="TchrDelete" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
